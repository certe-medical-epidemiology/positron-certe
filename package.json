{
    "name": "positron-certe",
    "displayName": "Certe MedEpi",
    "description": "Positron Extension for Certe, MedEpi to allow Positron project support.",
    "version": "1.0.5",
    "icon": "images/logo.png",
    "publisher": "Stichting Certe Medische Diagnostiek en Advies",
    "author": "Matthijs Berends <m.berends@certe.nl>",
    "repository": {
        "type": "git",
        "url": "https://github.com/certe-medical-epidemiology/positron-certe"
    },
    "engines": {
        "vscode": "^1.101.0",
        "positron": "^2025.08.x"
    },
    "license": "GPL-2.0",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "Certe Dark (certeblauw)",
                "uiTheme": "vs-dark",
                "path": "./themes/certe-dark-blauw.json"
            },
            {
                "label": "Certe Dark (certeroze)",
                "uiTheme": "vs-dark",
                "path": "./themes/certe-dark-roze.json"
            },
            {
                "label": "Certe Dark (certegroen)",
                "uiTheme": "vs-dark",
                "path": "./themes/certe-dark-groen.json"
            },
            {
                "label": "Certe Light (certeblauw)",
                "uiTheme": "vs",
                "path": "./themes/certe-light-blauw.json"
            },
            {
                "label": "Certe Light (certeroze)",
                "uiTheme": "vs",
                "path": "./themes/certe-light-roze.json"
            },
            {
                "label": "Certe Light (certegroen)",
                "uiTheme": "vs",
                "path": "./themes/certe-light-groen.json"
            }
        ],
        "commands": [
            {
                "command": "certe.moveTask",
                "title": "Taak verplaatsen",
                "icon": "$(remote)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.openFolder",
                "title": "Map",
                "icon": "$(folder)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.copyLink",
                "title": "Koppeling",
                "icon": "$(link)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.versions",
                "title": "Versies",
                "icon": "$(files)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.validateRequest",
                "title": "Validatieverzoek",
                "icon": "$(feedback)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.validate",
                "title": "Valideren",
                "icon": "$(check)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.authorise",
                "title": "Autoriseren",
                "icon": "$(pass)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            {
                "command": "certe.openSharePoint",
                "title": "SharePoint",
                "icon": "$(compass)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            },
            
            {
                "command": "certe.newProjectConsult",
                "title": "Project/Consult",
                "icon": "$(diff-added)",
                "actionBarOptions": {
                    "controlType": "button",
                    "displayTitle": true
                }
            }
        ],
        "menus": {
            "editor/actions/left": [
                {
                    "command": "certe.moveTask",
                    "when": "resourceScheme == 'file'",
                    "group": "certe@1"
                },
                {
                    "command": "certe.openFolder",
                    "when": "resourceScheme == 'file'",
                    "group": "certe@2"
                },
                {
                    "command": "certe.copyLink",
                    "when": "resourceScheme == 'file'",
                    "group": "certe@3"
                },
                {
                    "command": "certe.versions",
                    "when": "resourceScheme == 'file'",
                    "group": "certe@4"
                },
                {
                    "command": "certe.openSharePoint",
                    "when": "resourceScheme == 'file'",
                    "group": "certe@5"
                },
                {
                    "command": "certe.validateRequest",
                    "when": "resourceScheme == 'file' && (resourceExtname == .R || resourceExtname == .Rmd || resourceExtname == .qmd)",
                    "group": "certe@6"
                },
                {
                    "command": "certe.validate",
                    "when": "resourceScheme == 'file' && (resourceExtname == .R || resourceExtname == .Rmd || resourceExtname == .qmd)",
                    "group": "certe@7"
                },
                {
                    "command": "certe.authorise",
                    "when": "resourceScheme == 'file' && (resourceExtname == .R || resourceExtname == .Rmd || resourceExtname == .qmd)",
                    "group": "certe@8"
                }
            ],


            "editor/actions/right": [
                {
                    "command": "certe.newProjectConsult",
                    "group": "certe@10"
                }
            ]
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true,
            "trustedDomains": [
                "certe.nl",
                "*.certe.nl",
                "microsoft.com",
                "*.microsoft.com",
                "sharepoint.com",
                "*.sharepoint.com"
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20",
        "@types/sinon": "^17.0.4",
        "@types/vscode": "^1.100.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.13.0",
        "glob": "^11.0.0",
        "mocha": "^11.6.0",
        "sinon": "^20.0.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0"
    },
    "dependencies": {
        "@posit-dev/positron": "^0.1.3"
    },
    "extensionDependencies": [
        "PKief.material-icon-theme",
        "posit.shiny",
        "quarto.quarto"
    ]
}
